{
  "features": {
    "docs": {
      "enabled": false
    },
    "chat": {
      "model": "claude-3.5-sonnet"
    }
  },
  "context": {
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/package.json",
      "**/tsconfig.json",
      "**/*.md",
      ".gitignore",
      "biome.json",
      "pnpm-workspace.yaml"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/.next/**",
      "**/dist/**",
      "**/.turbo/**",
      "**/.vercel/**",
      "**/coverage/**",
      "**/*.log",
      "**/.DS_Store"
    ]
  },
  "codebase": {
    "description": "Generic TypeScript monorepo template with Next.js web app and Hono API server, deployed to Cloudflare Pages",
    "techStack": [
      "TypeScript",
      "pnpm workspaces",
      "Next.js",
      "Hono",
      "Cloudflare Pages",
      "Biome",
      "Tailwind CSS",
      "shadcn/ui"
    ]
  }
}
