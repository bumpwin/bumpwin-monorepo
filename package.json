{
  "name": "monorepo-template",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "d": "pnpm run dev",
    "b": "pnpm run pages:build",
    "k": "pnpm run check:fix",
    "preview": "pnpm run pages:preview",
    "dev": "pnpm --filter web dev",
    "dev:all": "pnpm -r --parallel dev",
    "dev:cmd": "pnpm --filter cmd dev",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:apps": "pnpm --filter './apps/**' build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "biome check . && tsc -b",
    "check:fix": "biome check . --write && tsc -b",
    "check:biome": "biome check . --write",
    "format": "biome format . --write",
    "lint": "biome check . --write",
    "lint:fix": "biome check . --write --unsafe",
    "typecheck": "tsc -b",
    "pages:build": "pnpm run build:packages && pnpm --filter web pages:build",
    "pages:preview": "pnpm --filter web pages:preview",
    "pages:deploy": "pnpm --filter web pages:deploy"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-validator": "^0.7.0",
    "@mysten/sui": "^1.30.2",
    "@questdb/nodejs-client": "^3.0.0",
    "@supabase/supabase-js": "^2.49.10",
    "@workspace/logger": "workspace:*",
    "@workspace/questdb": "workspace:*",
    "@workspace/sui": "workspace:*",
    "@workspace/supabase": "workspace:*",
    "bumpwin": "^0.202505.25",
    "hono": "^4.7.11",
    "neverthrow": "^8.2.0",
    "pg": "^8.16.0",
    "ts-pattern": "^5.7.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "wrangler": "^4.19.1",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/next-on-pages": "^1.13.12",
    "@types/bun": "^1.2.15",
    "@types/node": "^22.15.29"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^22.15.29",
      "typescript": "^5.8.3",
      "@biomejs/biome": "^1.9.4",
      "@hono/node-server": "^1.14.3",
      "@supabase/supabase-js": "^2.49.10",
      "@mysten/sui": "^1.30.2",
      "bumpwin": "^0.202505.25"
    }
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
